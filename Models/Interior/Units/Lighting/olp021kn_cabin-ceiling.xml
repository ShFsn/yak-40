<?xml version="1.0"?>

<!-- Cabin ceiling lighting -->

<PropertyList>
 <path>../../shared/knobs/ppb.ac</path>

 <animation>
   <type>knob</type>
   <object-name>turnme</object-name>
   <property>yak-40/Lighting/cabin-ceiling_dim</property>
   <factor>-100</factor>
  <axis>
    <x>1.0</x>
    <y>0.0</y>
    <z>0.0</z>
  </axis>
    <action>
     <binding>
      <command>property-adjust</command>
      <property>yak-40/Lighting/cabin-ceiling_dim</property>
      <factor>-0.05</factor>
      <min>0</min>
      <max>1</max>
      <wrap>false</wrap>
     </binding>
    </action>
   <hovered>
    <binding>
      <command>set-tooltip</command>
      <tooltip-id>ceilinglight</tooltip-id>
      <label>Ceiling
Lighting</label>
    </binding>
   </hovered>
 </animation>

</PropertyList>
