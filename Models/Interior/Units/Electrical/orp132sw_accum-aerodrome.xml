<?xml version="1.0"?>

<!-- 2PPNTK, Batteries or Aerodrome Power -->

<PropertyList>
 <path>../../shared/switches/2ppntk.ac</path>

 <animation>
  <type>pick</type>
  <object-name>clickspot_up</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("yak-40/Electrical/batt_aero", 1.0, 0.4 );
      </script>
    </binding>
<!-- animation, begin with sw -->
    <binding>
      <command>nasal</command>
      <script>
	interpolate("yak-40/Electrical/sw_batt_aero", 1.0, 0.1 );
      </script>
    </binding>
  </action>
   <hovered>
    <binding>
      <command>set-tooltip</command>
      <tooltip-id>BATToffaero</tooltip-id>
      <label>Batteries as
AUX Source</label>
    </binding>
   </hovered>
 </animation>

 <animation>
  <type>pick</type>
  <object-name>clickspot_middle</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("yak-40/Electrical/batt_aero", 0.0, 0.4 );
      </script>
    </binding>
<!-- animation, begin with sw -->
    <binding>
      <command>nasal</command>
      <script>
	interpolate("yak-40/Electrical/sw_batt_aero", 0.0, 0.1 );
      </script>
    </binding>
  </action>
   <hovered>
    <binding>
      <command>set-tooltip</command>
      <tooltip-id>battOFFaero</tooltip-id>
      <label>No AUX
Source</label>
    </binding>
   </hovered>
 </animation>

 <animation>
  <type>pick</type>
  <object-name>clickspot_down</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("yak-40/Electrical/batt_aero", -1.0, 0.4 );
      </script>
    </binding>
<!-- animation, begin with sw -->
    <binding>
      <command>nasal</command>
      <script>
	interpolate("yak-40/Electrical/sw_batt_aero", -1.0, 0.1 );
      </script>
    </binding>
  </action>
   <hovered>
    <binding>
      <command>set-tooltip</command>
      <tooltip-id>battoffAERO</tooltip-id>
      <label>Aerodrome as
AUX Source</label>
    </binding>
   </hovered>
 </animation>

 <animation>
   <type>rotate</type>
   <object-name>lever</object-name>
   <property>yak-40/Electrical/sw_batt_aero</property>
  <interpolation>
    <entry><ind>1.0</ind>	<dep>30.0</dep></entry>
    <entry><ind>-1.0</ind>	<dep>-30.0</dep></entry>
  </interpolation>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
 </animation>

</PropertyList>
