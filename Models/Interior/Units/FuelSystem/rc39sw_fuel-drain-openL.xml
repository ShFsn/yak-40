<?xml version="1.0"?>

<!-- PPG-15K, Fuel drain left OPEN/CLOSE -->

<PropertyList>
 <path>../../shared/switches/azs.ac</path>

 <animation>
  <type>pick</type>
  <object-name>clickspot_up</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("yak-40/FuelSystem/drainL", 1.0, 0.4 );
      </script>
    </binding>
<!-- animation, begin with sw -->
    <binding>
      <command>nasal</command>
      <script>
	interpolate("yak-40/FuelSystem/sw_drainL", 1.0, 0.1 );
      </script>
    </binding>
  </action>
   <hovered>
    <binding>
      <command>set-tooltip</command>
      <tooltip-id>fueldrainopenl</tooltip-id>
      <label>OPEN Fuel Drain
Valves left</label>
    </binding>
   </hovered>
 </animation>

 <animation>
  <type>pick</type>
  <object-name>clickspot_down</object-name>
  <visible>false</visible>
  <action>
    <button>0</button>
    <repeatable>false</repeatable>
    <binding>
      <command>nasal</command>
      <script>
        interpolate("yak-40/FuelSystem/drainL", -1.0, 0.4 );
      </script>
    </binding>
<!-- animation, begin with sw -->
    <binding>
      <command>nasal</command>
      <script>
	interpolate("yak-40/FuelSystem/sw_drainL", -1.0, 0.1 );
      </script>
    </binding>
  </action>
   <hovered>
    <binding>
      <command>set-tooltip</command>
      <tooltip-id>fueldrainclosel</tooltip-id>
      <label>CLOSE Fuel Drain
Valves left</label>
    </binding>
   </hovered>
 </animation>

 <animation>
   <type>rotate</type>
   <object-name>lever</object-name>
   <property>yak-40/FuelSystem/sw_drainL</property>
  <interpolation>
    <entry><ind>1.0</ind>	<dep>30.0</dep></entry>
    <entry><ind>-1.0</ind>	<dep>-30.0</dep></entry>
  </interpolation>
  <axis>
    <x>0.0</x>
    <y>-1.0</y>
    <z>0.0</z>
  </axis>
 </animation>

</PropertyList>
